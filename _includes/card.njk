{% macro card(title, date, teaser, imageUrl, postUrl, landscape) %}
<a href="{{ postUrl }}" class="block border-gray-400 border-2 border-opacity-25 rounded-md shadow-lg p-8 {{ "md:col-span-2" if landscape else "md:col-span-1" }}">
    <div class="{{ "md:hidden" if landscape else "" }}">
      <h2 class="text-2xl font-semibold mb-2">{{ title }}</h2>
      <h3 class="text-lg text-gray-400 mb-4">{{ date }}</h3>
      <img class="block m-h-image mb-8 ml-auto mr-auto" src="{{ imageUrl }}" alt="{{ title }}">
      <p>{{ teaser }}</p>
    </div>
    <div class="hidden {{ "md:flex" if landscape else "" }}">
      <img class="block mb-4 ml-auto mr-auto" src="{{ imageUrl }}" alt="{{ title }}">
      <div class="flex-grow pl-6">
        <h2 class="text-2xl font-semibold mb-2">{{ title }}</h2>
        <h3 class="text-lg text-gray-400 mb-4">{{ date }}</h3>
        <p>{{ teaser }}</p>
      </div>
    </div>
</a>
{% endmacro %}