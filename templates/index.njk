layout: layout.njk
---

{% from "card.njk" import card %}

<div class="m-16 grid grid-flow-row grid-cols-1 md:grid-cols-2 gap-16">
{%- for post in collections.posts -%}
  {%- if not post.data.draft -%}
  {{ card(post.data.title, post.date.toLocaleDateString('en-GB'), post.data.teaser, post.data.image, post.url, loop.first) }}
  {%- endif -%}
{%- endfor -%}
</div>